// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User and Authentication
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  firstName     String?
  lastName      String?
  companyId     String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  company       Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)
  employee      Employee?

  @@map("users")
}

// Company Master
model Company {
  id            String   @id @default(uuid())
  name          String
  code          String   @unique
  address       String?
  city          String?
  state         String?
  country       String?
  pincode       String?
  phone         String?
  email         String?
  gstin         String?
  pan           String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  branches      Branch[]
  users         User[]

  @@map("companies")
}

// Branch Master
model Branch {
  id            String   @id @default(uuid())
  companyId     String
  name          String
  code          String
  address       String?
  city          String?
  state         String?
  phone         String?
  email         String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  counters     Counter[]
  employees    Employee[]

  @@unique([companyId, code])
  @@map("branches")
}

// Counter Master
model Counter {
  id            String   @id @default(uuid())
  branchId      String
  name          String
  code          String
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  branch        Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, code])
  @@map("counters")
}

// Department Master
model Department {
  id            String   @id @default(uuid())
  name          String
  code          String   @unique
  description   String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  employees     Employee[]

  @@map("departments")
}

// Role Master
model Role {
  id            String   @id @default(uuid())
  name          String
  code          String   @unique
  description   String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  employees     Employee[]

  @@map("roles")
}

// Employee Master
model Employee {
  id            String   @id @default(uuid())
  userId        String?  @unique
  branchId      String
  departmentId  String?
  roleId        String?
  employeeCode  String   @unique
  firstName     String
  lastName      String?
  email         String?
  phone         String?
  address       String?
  joiningDate   DateTime?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  branch        Branch   @relation(fields: [branchId], references: [id])
  department    Department? @relation(fields: [departmentId], references: [id])
  role          Role?    @relation(fields: [roleId], references: [id])

  @@map("employees")
}
